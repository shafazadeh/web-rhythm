{
	"name": "rhythm_mono",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"check-types": "turbo run check-types",
		"prepare": "husky",
		"e2e": "cd e2e && npm run test",
		"e2e:ui": "cd e2e && npm run test:ui",
		"e2e:admin": "cd e2e && npm run test:admin",
		"e2e:site": "cd e2e && npm run test:site"
	},
	"devDependencies": {
		"@playwright/test": "^1.55.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.6",
		"prettier": "^3.6.2",
		"turbo": "^2.5.6",
		"typescript": "5.9.2"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "npm@10.2.4",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		]
	}
}
